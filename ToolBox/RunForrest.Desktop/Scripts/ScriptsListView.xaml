<UserControl x:Class="RunForrest.Desktop.ScriptsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RunForrest.Desktop"
             xmlns:res="clr-namespace:RunForrest.Desktop.Properties"
             mc:Ignorable="d">

  <Grid>
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">

      <Grid>

        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scripts List -->
        <ListView Grid.Row="0"
              ItemsSource="{Binding Items}"
              SelectedItem="{Binding SelectedItem}"
              ScrollViewer.CanContentScroll="False"/>

        <!-- Add / Remove Script Buttons -->
        <WrapPanel Grid.Row="1"
                   Margin="10">
          <Button Command="{Binding AddNewScriptCommand}"
                  Content="{x:Static res:Resources.AddScriptButton}" />
          <Button Command="{Binding RemoveSelectedScriptsCommand}"
                  Content="{x:Static res:Resources.RemoveScriptButton}" />
        </WrapPanel>

      </Grid>

    </ScrollViewer>
    
  </Grid>

</UserControl>
